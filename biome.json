{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
